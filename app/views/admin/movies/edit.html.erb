<h1>Edit Movies</h1>
<%= form_with model: [ :admin, @movie ] do |form| %>
    <div>
        <%= form.label :name, "タイトル" %><br>
        <%= form.text_field :name %>
    </div>
    <div>
        <%= form.label :year, "公開年" %><br>
        <%= form.text_area :year %>
    </div>
    <div>
        <%= form.label :description, "概要" %><br>
        <%= form.text_area :description %>
    </div>
    <div>
        <%= form.label :image_url, "画像URL" %><br>
        <%= form.text_field :image_url %>
    </div>
    <div>
        <%= form.label :is_showing, "上映中" %><br>
        <%= form.check_box :is_showing %>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>