<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>タイトル</th>
            <th>公開年</th>
            <th>概要</th>
            <th>画像URL</th>
            <th>上映中</th>
            <th>作成日時</th>
            <th>更新日時</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><%= link_to @movie.id, edit_admin_movie_path(@movie.id) %></td>
            <td><%= @movie.name %></td>
            <td><%= @movie.year %></td>
            <td><%= @movie.description %></td>
            <td><%=  link_to "画像", @movie.image_url %></td>
            <td>
                <% if @movie.is_showing %>
                    上映中
                <% else %>
                    上映予定
                <% end %>
            </td>
            <td><%= @movie.created_at %></td>
            <td><%= @movie.updated_at %></td>
        </tr>
    </tbody>
</table>

<table border="1">
    <thead>
        <tr>
            <th>作品ID</th>
            <th>開始時刻</th>
            <th>終了時刻</th>
            <th>作成日時</th>
            <th>更新日時</th>
        </tr>
    </thead>
    <tbody>
        <% @movie.schedules.each do |schedule| %>
            <tr>
                <td><%= link_to schedule.movie_id, admin_schedule_path(schedule.id) %></td>
                <td><%= schedule.start_time %></td>
                <td><%= schedule.end_time %></td>
                <td><%= schedule.created_at %></td>
                <td><%= schedule.updated_at %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<h3><%= link_to "New", "/admin/movies/#{@movie.id}/schedules/new" %></h3>